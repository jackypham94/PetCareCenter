                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock FontSize="20" Text="Total: " Margin="5"></TextBlock>
                            <TextBlock x:Name="TotalTextBlock" Foreground="DarkGoldenrod" FontSize="20" Text="0" Margin="5,5,0,5"></TextBlock>
                            <TextBlock Foreground="DarkGoldenrod" FontSize="20" Text="$" Margin="5,5,0,5"></TextBlock>
                        </StackPanel>
                    </Grid>
                    <TextBlock Margin="20,20,20,0" Foreground="Teal" FontSize="25" Text="Information"></TextBlock>

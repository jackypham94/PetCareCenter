                    <TextBlock Grid.Column="1" Text="You must login first" Foreground="Tomato"
                                   Margin="15,0,15,0" VerticalAlignment="Center"></TextBlock>
                </Grid>
            </Button>
            <ScrollViewer x:Name="MainScrollViewer" Grid.Row="1">
                <RelativePanel>
                    <ItemsControl RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True">
                        <ItemsControl.ItemContainerTransitions>
                            <TransitionCollection>
                                <EntranceThemeTransition IsStaggeringEnabled="True"
                                                 FromVerticalOffset="100" />
                            </TransitionCollection>
                        </ItemsControl.ItemContainerTransitions>
                        
                        <Button x:Name="AddNewPetButton" Background="White" Padding="0"
                                RelativePanel.Below="CategoriesList"
                                RelativePanel.AlignRightWithPanel="True" 
                                RelativePanel.AlignLeftWithPanel="True" 
                                HorizontalAlignment="Stretch" Margin="20" Click="AddNewPetButton_Click">
                            <Button.BorderBrush>
                                <SolidColorBrush Color="Teal"/>
                            </Button.BorderBrush>
                            <Grid Margin="20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                      Fill="Teal" Stretch="Uniform" Width="25" Height="25" 
                                      HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.ZIndex="1"/>
                                <TextBlock Grid.Column="1" Text="Add your new pet" 
                                   Margin="15,0,15,0" VerticalAlignment="Center"></TextBlock>
                                <Image Width="70" Grid.Column="2" Source="../Assets/Images/cat.png" 
                               Stretch="UniformToFill"></Image>
                            </Grid>
                        </Button>
                        <ListView x:Name="PetListView"
                                  SelectionChanged="PetListView_SelectionChanged"
                                  IsItemClickEnabled="True"
                                  Margin="12,0"
                                  ItemTemplate="{StaticResource PetListItemTemplate}"
                                  RelativePanel.AlignLeftWithPanel="True"
                                  RelativePanel.AlignRightWithPanel="True"
                                  IsTabStop="False" />
                    </ItemsControl>
                </RelativePanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</local:BasePage>